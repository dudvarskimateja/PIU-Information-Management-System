<div class="row">
    <div class="col s12 m8">
        <h3>{{document.title}}
            <small>{{{editIcon document.user user document._id false}}}</small>
        </h3>
        <div class="card document">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{document.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{document.user.displayName}}</span>
                <img src="{{document.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/documents/user/{{document.user._id}}">More From {{document.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>
<h3>Add Documents</h3>
<div class="row">
    <form action="/documents" method="POST" enctype="multipart/form-data" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="fullName" name="fullName">
                <label for="fullName">First and Last Name</label>
            </div>
        </div>

        <div class="row">
            <div class="file-field input-field">
                <div class="btn">
                    <span>File</span>
                    <input type="file" id="invoiceUpload" name="invoiceUpload" accept="application/pdf">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" placeholder="Upload Invoice">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="file-field input-field">
                <div class="btn">
                    <span>File</span>
                    <input type="file" id="annexUpload" name="annexUpload" accept="application/pdf">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" placeholder="Upload Annex">
                </div>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>

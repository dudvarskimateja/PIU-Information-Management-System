<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your submitted documents</p>
{{#if documents}}
<table class="striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each documents}}
        <tr>
            <td><a href="/documents/{{_id}}">{{this._id}}</a></td>

            <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
            
            <td><span class="dash-status">{{this.status}}</span></td>
            
            <td>
                <form action="/documents/{{_id}}" method="POST" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not drafted any documents</p>
{{/if}}